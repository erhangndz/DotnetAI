
@{
    ViewData["Title"] = "Metinden Ses Dosyasına Dönüştür";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <div class="form-group">
        <label>Lütfen ses dosyasına dönüştürülecek metni <strong>İstediğiniz Dilde</strong> yazınız</label>
    <textarea type="text" name="text" class="form-control" required=""></textarea>
    </div>
    <span class="text-danger">@Html.ValidationSummary()</span>
    
    <div class="form-group">
        <label>Ses Türünü Seçin</label>
        <select name="voiceType" required="" class="form-control">
            <option selected disabled>Sesi Seçiniz</option>
            <option value="alloy">Doğal ve dengeli ton</option>
            <option value="onyx">Derin ve güçlü ton</option>
        </select>
    </div>

    <div class="form-group">
        <button class="btn btn-outline-primary">Mp3'e Dönüştür</button>
    </div>
</form>

@if (ViewBag.text != null)
{
    <div class="alert alert-info">
        <strong>Sese Dönüştürülen Metin: </strong>
        <p>
            @ViewBag.text
        </p>
    </div>
}
