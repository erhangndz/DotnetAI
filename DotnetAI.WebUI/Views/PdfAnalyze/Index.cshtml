
@{
    ViewData["Title"] = "Open AI ile Pdf Dosyası Analizi ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Lütfen Analiz edilecek pdf dosyasını seçiniz</label>
        <input type="file" name="pdfFile" accept="application/pdf" class="form-control" required />
    </div>

    <div class="form-group">
        <button class="btn btn-outline-primary">Analiz Et</button>
    </div>
</form>


@if (ViewBag.response != null)
{
    <div class="alert alert-info mt-2">
    
        <strong>Pdf Dosyasının Analizi:</strong>
        <p>
            @ViewBag.response
        </p>
    </div>
}